 {% extends "base.jinja2" %} {% block title %}Keywords{% endblock %}{% block name %}Keywords {% endblock %}  {% block content %}

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <ul class="list-group list-group-flush">
                    {% for item in result %} 
                    
                    <a href="keywords/{{item.id}}"class="list-group-item d-flex justify-content-between align-items-center list-group-item-action"> {{ item["query"] }}
                        
                        {% if item.status_job == "RUNNING"  %} 
                            <span class="badge badge-primary badge-pill badge-warning">{{item["status_job"]}}</span>
                        {% else %}
                            <span class="badge badge-primary badge-pill badge-success">{{item["status_job"]}}</span> 
                        {% endif %}
                    </a>
                    {% endfor %}


                </ul>
            </div>
            <div class="col-sm">
                <form action="/keywords" method="POST">
                    <input type="text" id="query" name="query" placeholder="query">
                    <button type="submit" id="submit">Submit</button>
                </form>
            </div>
           
           
        </div>
    </div >
</body>
{% endblock %}